<div class="profile">

<div class="row">
  <div class="small-3 small-centered columns">
    <%= image_tag(@user.avatar_url) if @user.avatar? %>
  </div>
</div>

<%= react_component("UserData", props: { user: @user,
                                  instruments: @user_instruments,
                                  genres: @user_genres,
                                  gigs: @user_gigs,
                                  gigRequests: @user_gig_requests,
                                  bandRequests: @user_band_requests,
                                  genresAll: @all_genres,
                                  instrumentsAll: @all_instruments}) %>

<%= react_component("SpotifyContainer", props: {user: @user,
                                                tracks: @user_tracks}) %>

</div>
